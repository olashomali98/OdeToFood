@page "{resturantId:int}"
@model OdeToFood.Pages.Resturants.EditModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Editing @Model.Resturant.Name</h1>

<form method="post">

    <input type="hidden" asp-for="Resturant.Id" />
    <div class="form-group">
        <label asp-for="Resturant.Name"></label>
        <input asp-for="Resturant.Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Resturant.Location"></label>
        <input asp-for="Resturant.Location" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Resturant.Cuisine"></label>
        <select class="form-control" asp-for="Resturant.Cuisine"
                asp-items="Model.Cuisines"
                >
            
        </select>
        
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>